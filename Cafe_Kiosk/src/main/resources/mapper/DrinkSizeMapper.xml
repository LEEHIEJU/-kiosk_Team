<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hizju.cafekiosk.dao.DrinkSizeDAO">
	<!-- namespace를 인터페이스 이름과 일치 시켜야 한다. -->
	
	<!-- 음료사이즈 -->
	<select id="drinksizelist" parameterType="string" resultType="DrinkSizeVO">
		select 
		*
		from DRINKSIZE
		
	</select>
	
	<!-- 사이즈 업 -->
	<select id="sizeup" parameterType="string">
		select
		from DRINKSIZE
	</select>
	
	<!-- 아이스 업 -->
	<select id="iceup" parameterType="string">
		select 
		#{ICESMALL} as icesmall + 500
		from DRINKSIZE	
	</select>
	
</mapper>